_pkgname="hypridle"
pkgname="$_pkgname-git"
pkgver=0.1.7.r2.gf3d1f3b
pkgrel=1
pkgdesc="Hyprland utilities library used across the ecosystem"
arch=('x86_64' 'aarch64')
url="https://github.com/hyprwm/hypridle"
license=('BSD-3-Clause')
depends=(
  gcc-libs
  glibc
  hyprlang-git libhyprlang.so
  hyprutils-git libhyprutils.so
  hyprwayland-scanner-git
  'sdbus-cpp>=2.0.0' libsdbus-c++.so
  wayland libwayland-client.so
  wayland-protocols
)
makedepends=(
  cmake
  git
  hyprland-protocols-git
)
provides=("$_pkgname=${pkgver/\.r*/}")
conflicts=("$_pkgname")
source=("git+$url.git")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname" || exit 1

  printf "%s" "${ git describe --long --tags --abbrev=7 | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'; }"
}

prepare() {
  cd "$srcdir/$_pkgname" || exit 1

  cmake -D CMAKE_BUILD_TYPE=Release -D CMAKE_INSTALL_PREFIX=/usr -S . -B ./build
}

build() {
  cd "$srcdir/$_pkgname" || exit 1

  cmake --build ./build
}

package() {
  cd "$srcdir/$_pkgname" || exit 1

  DESTDIR="$pkgdir/" cmake --install build
  install -Dm644 "$srcdir/$_pkgname/LICENSE" -t "$pkgdir/usr/share/licenses/$pkgname/"
}
