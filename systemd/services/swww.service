[Unit]
Description=Wallpaper daemon
PartOf=graphical-session.target
After=graphical-session.target
Requisite=graphical-session.target

[Service]
Type=exec
ExecStart=/usr/bin/env swww-daemon --no-cache
ExecStartPost=-/usr/bin/env sh -c 'waypaper --random || update-wallpaper.sh'
ExecReload=/usr/bin/env swww kill
Restart=on-failure
RestartSec=3

[Install]
WantedBy=graphical-session.target
